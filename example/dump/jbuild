(jbuild_version 1)

(executable
 ((name dump)
  (libraries (notmuch core))
  (preprocess (pps (ppx_jane ppx_driver.runner)))))

(rule
  (with-stdout-to data.should (run notmuch dump --include=tags)))

(rule
  (with-stdout-to data.is (run ./dump.exe)))

(alias
 ((name runtest)
  (package notmuch)
  (action (diff data.should data.is))))

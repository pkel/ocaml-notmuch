(jbuild_version 1)

(library
 ((name notmuch)
  (public_name notmuch)
  (synopsis "notmuch bindings")
  (libraries (ctypes ctypes.foreign))
  (virtual_deps (ctypes-foreign menhir))
  (library_flags (-cclib -lnotmuch))
  ))

(menhir
 ((modules (config_parser))
  (flags (--explain))))

(ocamllex (config_lexer))
